{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "typescript",
    "unicorn",
    "react",
    "react-hooks",
    "import",
    "react-perf"
  ],
  "categories": {
    // "correctness": "off"

  },
  "env": {
    "builtin": true,
    "browser": true,
    "commonjs": true,
    "node": true,
    "shared-node-browser": true
  },
  "rules": {
    "no-unused-vars": "off"
  },
  "ignorePatterns": [
    "src/*.js",
    "**/build",
    "**/dist",
    "**/node_modules",
    "*/**/*.eslintrc*.?js",
    "packages/shared-fvtt-bits/dotfiles/copy"
  ],
